import java.util.Scanner;

public class DIEM {
	private double x,y;
	public DIEM() {};
	public DIEM(double x,double y) {
		this.x=x;
		this.y=y;
	}
	Scanner sc=new Scanner(System.in);
	public void nhapDiem() {
		System.out.println("Nhap vao toa do diem: ");
		x=sc.nextDouble();
		y=sc.nextDouble();
	}
	public double getX() {
		return x;
	}
	public void setX(double x) {
		this.x = x;
	}
	public double getY() {
		return y;
	}
	public void setY(double y) {
		this.y = y;
	}
	public void inDiem() {
		System.out.println("Toa do diem: ("+x+","+y+")");
	}
	
	
}